{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "implicit-arrow-linebreak": "off",
    "no-console": "warn",
    "quotes": "error",
    "import/export": "off",
    "import/no-unresolved": "off",
    "class-methods-use-this": "off",
    "import/prefer-default-export": "off",
    "no-unused-vars": "warn",
    "import/extensions": "off"
  }
}
